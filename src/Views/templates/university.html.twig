<body>
<div class="container">
    <h1>Geekhub University</h1>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>University name</th>
            <th>City</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
        {% for university in university %}
            <tr>
                <td>{{ university.id }}</td>
                <td>{{ university.universityName }}</td>
                <td>{{ university.city }}</td>
                <td>{{ university.email }}</td>
                <td><a href="index.php?controller=university&action=edit&id={{ university.id }}">edit</a> <a href="index.php?controller=university&action=delete&id={{ university.id }}">delete</a></td>
            </tr>
        {% endfor %}
    </table>
